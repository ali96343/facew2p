            ['href_html', re.compile(r'(href\s*=\s*[\"\'])([^\.]+)(\.html\s*)([\"\'])()'), r'\g<1> %s \g<2> %s \g<4> ', r_h0, True , False],
            ['action_html', re.compile(r'(action\s*=\s*[\"\'])([^\.]+)(\.html\s*)([\"\'])()'), r'\g<1> %s \g<2> %s \g<4> ', r_h0, True , False],
            ['href_root', re.compile(r'(href\s*=\s*[\"\'])([/])([\"\'])()'), r'\1 \2 \3', r_h1, True , False],
            ['href_any', re.compile(r'(href\s*=\s*[\"\'])([^\"\']+)([\"\'])()'), r'\g<1>%s\g<2>%s\g<3>', r_h2, True , False],
            ['src_any', re.compile(r'(src\s*=\s*[\"\'])([^\"\']+)([\"\'])()'), r'\g<1>%s\g<2>%s\g<3>', r_src, True , False],
            ['data-*', re.compile(r'(data-\w+\s?=\s*[\"\'])([\w\.-]+[/][^\"\']*)([\"\'])()'), r'\g<1>%s\g<2>%s\g<3>', r_data, False , False],
            #['data-*', re.compile(r'(data-\w+\s?=\s*[\"\'])(\w+[/][^\"\']*)([\"\'])()'), r'\g<1>%s\g<2>%s\g<3>', r_data, False , False],
            #['url_img', re.compile(r'(url\s?\(\"?)([^\)]*\"?)(\))()'), r'\g<1>%s\g<2>%s\g<3>', r_url, False , False],
            ['url_img', re.compile(r'(url\s*\(\s*[\"\']?\s*)(.+?)([\"\']?\))()') , r"url('%s\g<2>%s')", r_url, False , False],
            #['url_img', re.compile(r'(url\s?\(\"?)([-a-zA-Z./]+)(\"?\))()') , r"url('%s\g<2>%s')", r_url, False , False],
            ['title', re.compile(r'(<title>)([^<]*)(</title>)()'), r'\1%s\3', r_t0, False , False],
            ['/head', re.compile(r'(</head>)'), r'\1%s\3', r_head, False , False],
        ]

        Z.convert_text = [
