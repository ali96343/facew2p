def prRed(skk):
      out_str= "\033[91m {}\033[00m" if sys.stdout.isatty() == True else "--- {} "
      print(out_str.format(skk))

def prGreen(skk):
      out_str= "\033[92m {}\033[00m" if sys.stdout.isatty() == True else "--- {} "
      print(out_str.format(skk))

def prYellow(skk):
      out_str= "\033[93m {}\033[00m" if sys.stdout.isatty() == True else "--- {} "
      print(out_str.format(skk))

