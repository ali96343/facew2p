            ['</i>..</a', re.compile(r'(</i>)([^<]*)(</a)()'), r'\g<1>{{{{={}["ia{}"]}}}}\g<3>', r_sp, True , True],
            ['</i>..</small', re.compile(r'(</i>)([^<]*)(</small)()'), r'\g<1>{{{{={}["ib{}"]}}}}\g<3>', r_sp, True , True],
            ['>..</small', re.compile(r'(>)([^<]*)(</small)()'), r'\g<1>{{{{={}["ic{}"]}}}}\g<3>', r_sp, True , True],
            ['>...</i>', re.compile(r'(>)([^<]*)(</i>)()'), r'\g<1>{{{{={}["ix{}"]}}}}\g<3>', r_sp, True , True],
            ['<small>', re.compile(r'(<small>)([^<]*)(</small>)()'), r'\g<1>{{{{={}["si{}"]}}}}\g<3>', r_sp, True , True],
            ['<span>...<', re.compile(r'(<span>)([^<]+)(</span>)()'), r'\g<1>{{{{={}["sp{}"]}}}}\g<3>', r_sp, True , True],
            ['>...</span>', re.compile(r'(>)([^<]+)(</span>)()'), r'\g<1>{{{{={}["sx{}"]}}}}\g<3>', r_sp, True , True],
            ['<p>...<', re.compile(r'(<p>)([^<]*)(</p>)()'), r'\g<1>{{{{={}["pa{}"]}}}}\g<3>', r_sp, True , True],
            ['>...</p>', re.compile(r'(>)([^<]*)(</p>)()'), r'\g<1>{{{{={}["pc{}"]}}}}\g<3>', r_sp, True , True],
            ['<p>...<x', re.compile(r'(<p>)([^<]*)(<)()'), r'\g<1>{{{{={}["pf{}"]}}}}\g<3>', r_sp, True , True],
            ['<br>...<', re.compile(r'(<br>)([^<]*)(<)()'), r'\g<1>{{{{={}["bd{}"]}}}}\g<3>', r_sp, True , True],
            ['>...<br>', re.compile(r'(>)([^<]*)(<br>)()'), r'\g<1>{{{{={}["ba{}"]}}}}\g<3>', r_sp, True , True],
            ['<li>...<', re.compile(r'(<li>)([^<]*)(</li>)()'), r'\g<1>{{{{={}["la{}"]}}}}\g<3>', r_sp, True , True],
            ['place', re.compile(r'(placeholder\s?=\s?\")([^"]+?)(")()'), r'\g<1>{{{{={}["pb{}"]}}}}\g<3>', r_place, False , True],
            ['button', re.compile("(<button[^>]+>)(.*?)(</button>)()"), r'\g<1>{{{{={}["bu{}"]}}}}\g<3>', r_a0, True , True],
            ['<li..>..<', re.compile("(<li[^>].*?>)(.*?)(</li>)()"), r'\g<1>{{{{={}["lb{}"]}}}}\g<3>', r_h6, True , True],
            ['<p..>..<', re.compile("(<p[^>].*?>)(.*?)(</p>)()"), r'\g<1>{{{{={}["hh{}"]}}}}\g<3>', r_h6, True , True],
            ['<span..>..<', re.compile("(<span[^>].*?>)(.*?)(</span>)()"), r'\g<1>{{{{={}["hg{}"]}}}}\g<3>', r_h6, True , True],
            ['h6', re.compile("(<h6[^>]+>)(.*?)(</h6>)()"), r'\g<1>{{{{={}["hf{}"]}}}}\g<3>', r_h6, True , True],
            ['h5', re.compile("(<h5[^>]+>)(.*?)(</h5>)()"), r'\g<1>{{{{={}["he{}"]}}}}\g<3>', r_h6, True , True],
            ['h4', re.compile("(<h4[^>]+>)(.*?)(</h4>)()"), r'\g<1>{{{{={}["hd{}"]}}}}\g<3>', r_h6, True , True],
            ['h3', re.compile("(<h3[^>]+>)(.*?)(</h3>)()"), r'\g<1>{{{{={}["hc{}"]}}}}\g<3>', r_h6, True , True],
            ['h2', re.compile("(<h2[^>]+>)(.*?)(</h2>)()"), r'\g<1>{{{{={}["hb{}"]}}}}\g<3>', r_h6, True , True],
            ['h1', re.compile("(<h1[^>]+>)(.*?)(</h1>)()"), r'\g<1>{{{{={}["ha{}"]}}}}\g<3>', r_h6, True , True],
            ['h.. <span>', re.compile("(<h[^>]+>)(.*?)(<span)()"), r'\g<1>{{{{={}["hk{}"]}}}}\g<3>', r_h6, True , True],
            ['h1h6', re.compile(r'(<h1>|<h2>|<h3>|<h4>|<h5>|<h6>)((?!(?:<)).*?)((<.*?>))'), r'\g<1>{{{{={}["hh{}"]}}}}\g<3>', r_pp, True , True],
            ['<a...>...<', re.compile("(<a[^>]+>)(.*?)(</a>)()"), r'\g<1>{{{{={}["aa{}"]}}}}\g<3>', r_a0, True , True],
            ['div', re.compile("(<div[^>]+>)(.*?)(</div>)()"), r'\g<1>{{{{={}["di{}"]}}}}\g<3>', r_a0, True , True],
            ['mail', re.compile(r'([\w\.-]+@[\w\.-]+)'), r'{{=%s["ma%s"]}}', ret_mail, False , True],
            #['maybe_tel', re.compile(r'(\D{1,2}?\d{2,3})\D{0,2}(\d{2,3})\D{0,2}(\d{2,4})\D{1,2}(\d*)'), r'{{=%s["te%s"]}}', ret_tel, False , True],
            #[ 'copyright',  re.compile( r'(\s*Copyright\s?)([^<]+<)', re.I  ), r'{{=%s["cp%s"]}}', ret_cp, False ],
        ]

        if Z.plus_labels:
            Z.convert += Z.convert_text

        Z.pat_cnt = dict((xpat, 0) for [xpat, _, _, _, _, _] in Z.convert)
        Z.insert_list = []

    def run(Z, html_fnm, dbg=True, pre_replace=True):
        #FileOper.unmini_html(html_fnm)
        if pre_replace and Z.repl_ll:
            if isinstance(Z.repl_ll, (list,)):
                for e in Z.repl_ll:
                    if isinstance(e, (dict,)):
                        for k, v in e.items():
                            #src_pat = k
                            #dst_pat = v
                            FileOper.replace_pat(
                                html_fnm, src_pat=k, dst_pat=v)
                            #FileOper.replace_pat( html_fnm  , src_pat=r'(<tfoot[^<]+)(.*?)(</tfoot>)(.)', dst_pat= metka )
                    else:
                        print ("bad dict in facew2p.new")
                        print ("===========", Z.repl_ll, " ", html_fnm)
            else:
                print ("bad list in facew2p.new")
                print ("===========", Z.repl_ll, " ", html_fnm)

        Z.f0 = html_fnm.split('.')[0]
        Z.file_db = Z.dbt_prefix + Z.f0.replace('_', '0').replace('-', '0')
 
        def pre_replace_in_file_lines(html_fnm):

            file_lines = replace_in_list( FileOper.file2list(html_fnm), {  r'\r': '', r"../../":"", r'../':'', r"./":"" })

            file_lines=[ re.sub(  r'[\"\'](.*){{(.*)[\"\']'  , '"replaced by facew2p"', i ) for i in file_lines ]
  
            for e in file_lines:
                 if (e.find('{{') != -1) : #  or  (e.find('}}') != -1):
                      prRed ("--- %s: found {{ and removed the line- : %s" %  (html_fnm, e))

            file_lines= [ e for e in file_lines if '{{' not in e ]
            return file_lines

        def defer_js(lines):

            for i, e in enumerate(lines):
              if any( [ 'defer' in e,  not '.js' in e]):
                  continue

              #if all([ '<script ' in e, 'src=' in e, ".js" in e]):
              #    lines[i]= e.replace("<script ", "<script defer ")
              #    print ("!!! ", lines[i])
    
              js_pat = re.compile(r'<\s*?script\s+src\s*?=')     
              #js_pat = re.compile(r'<\s*?script\s+[ =\"\'\w+]*?src\s*?=')     
              if re.search(js_pat, e):     
                 lines[i] = re.sub(js_pat, '<script defer src=', e)
                 # print ("!!! ", lines[i])
              # https://www.bogotobogo.com/python/python_regularExpressions.php  
            return lines 

        def defer2head(lines):
            head_line_num = 0
            def_list=["\n"]
            def_list.append("<!-- begin: moved by facew2p %s -->" %  datetime.datetime.now().strftime("%H:%M:%S %d.%m.%Y"))
            head_pat= re.compile( r'<\s*?/\s*?head\s*?>' )
            js_pat = re.compile(r'<script defer src=.*?<\s*?/\s*?script\*?>')     
            for i, e in enumerate(lines):
                if head_line_num ==0:
                    if re.search(head_pat, e):
                        head_line_num = i
                        continue
                else:
                    if re.search(js_pat, e):     
                        def_list.append(e)
                        lines[i] = re.sub(js_pat, '<!-- js-script-src moved to head -->', e)

            def_list.append("<!-- end: moved by facew2p -->")
            def_list.append('</head>')

            new_lines=[]
            for i, e in enumerate(lines):
                if i != head_line_num:
                   new_lines.append(e)
                else:
                   for ee in def_list:
                       new_lines.append(ee)
                     
            return new_lines 
              

        lines= pre_replace_in_file_lines( html_fnm )
        if Z.add_js_defer == True:
             lines= defer_js(lines)
             lines= defer2head(lines)

 
        def set_pragma_no_cache(lines):
            meta_line_num = 0
            meta_add = [
              '<meta http-equiv="Pragma" content="no-cache">\n'
              '<meta http-equiv="Expires" content="-1">\n'
              '<meta http-equiv="CACHE-CONTROL" content="NO-CACHE">\n'
              ]
            meta_pat = re.compile(r'<\s*?meta.*?>')
            for i, e in enumerate(lines):
                if meta_line_num ==0:
                    if re.search(meta_pat, e):
                        meta_line_num = i
                        meta_add.append(e )
                        break 

            new_lines = []
            for i, e in enumerate(lines):
                if i != meta_line_num:
                    new_lines.append(e)
                else:
                    for ee in meta_add:
                          new_lines.append( ee ) 
            
            return new_lines

        if Z.pragma_no_cache == True:
             lines= set_pragma_no_cache (lines)



        ctrl1 = Z.get_from_db_fnm2ctrl(Z.f0)
        link_tbl_e = [html_fnm + Z.myview_ext, html_fnm, ctrl1, Z.file_db]

        list_for_keys = []

        log_str = []

        Z.digit_list_pat=re.compile( r'(^[\d-]+[\.\,0-9%-]*\s*[\,\/\$]?\s*)+[^a-zA-Z]+$' )
        #Z.digit_list_pat=re.compile( r'(^[0-9-]+[\.0-9%-]?\s*[\,\/\$]?\s*)+' )
        #Z.digit_list_pat=re.compile( r'(^[0-9-]+[\.0-9%-]?\s*[\,\/]?\s*)+?(?![a-zA-Z]+)' )
        for num_str, line in enumerate(lines):
            

            for pat in Z.convert:
                [pat_name, p1, p2, func_nm, look_in_flag, is_digit_list] = pat
                match = re.search(p1, line)
                if match:
                    if (look_in_flag):
                        grp0 = match.group(2)
                        grp000 = match.group(0)

                        if any([("{{" in grp0 ),
                                grp0.startswith('#'),
                                grp0.startswith('//'),
                                grp0.startswith('javascript:'),
                                grp0.startswith('tel:'),
                                grp0.startswith('mailto:'),
                                grp0.startswith('skype:'),
                                grp0.startswith('ftp:'),
                                #('#' in grp0 ),
                                #("javascript" in grp0 ),
                                #('tel:' in grp0 ),
                                #("mailto:" in grp0 ),
                                ('://' in grp0 ),
                                ('&lt;' in grp0 ),
                                ('&gt;'in grp0 ),
                                ('&quot;' in grp0 ),
                                ('&amp;' in grp0 ),
                                ('&nbsp;' in grp0 ),
                                ('&larr;' in grp0 ),
                                ('&times;' in grp0 ),
                                ('&copy;' in grp0 ),
                                ('<' in grp0 ),
                                ('>' in grp0 ),
                                ('©' in grp0 ),
                                ('Colorlib' in grp0 ),
                                ('Almsaeed' in grp0 ),
                                ('W3layouts' in grp0 ),
                                ('Bootstrapious' in grp0 ),
                                (len(grp0) == 0),
                                ]):
                            continue

                        if is_digit_list == True:
                              digit_list =re.search( Z.digit_list_pat , grp0)
                              if digit_list and len(digit_list.group(0)):
                                     #print ('================', digit_list.group(0))
                                     #print ('================', grp0)
                                     continue

                        #if len([x for x in Z.continue_all if x in grp000]):
                        #    continue

                    Z.pat_cnt[pat_name] += 1

                    if dbg:
                        dbg_str = "--{} -- match  {} {}".format(
                            html_fnm, pat_name, p2)
                        print (dbg_str)
                        log_str.append(dbg_str)

                        for i in range(0, len(match.groups())):
                            dbg2_str = "{} {} ".format(i, match.group(i))
                            print (dbg2_str)
                            log_str.append(dbg2_str)

                    (new_pat, data_str) = func_nm(
                        Z, match, p2, next(int_uniq_key))
                    #(new_pat, data_str)=func_nm (Z,match , p2, num_str)
                    result = re.sub(p1, new_pat, line)

                    if len(data_str):
                        list_for_keys.append(data_str)

                    if dbg:
                        print ("source: ", line)
                        print ("result: ", result)
                        log_str.append(data_str)
                        log_str.append("source: {}".format(line))
                        log_str.append("result: {}".format(result))
                    lines[num_str] = line = result

        if dbg:
            FileOper.list2file(log_str, html_fnm + Z.mylog_ext)
        link_tbl_e.append(list_for_keys)
        Z.link_table.append(link_tbl_e)


        def get_app_nm():
            s = os.getcwd().split('/')
            return s[-3] if len(s) > 4 else 'unk'

        def optimizer(in_lines):
            o_lines= []

            stat_beg = "{{=URL('static','"
            stat_end = "')}}"
            ctrl_beg = "{{=URL(c='default',f='" 
            ctrl_end = stat_end            


            rep_stat= "/{}/static/".format( get_app_nm()  )
            rep_ctrl= "/{}/default/".format( get_app_nm()  )

            for e in in_lines:
                 if all( [ stat_beg  in e, stat_end in e  ] ) :
                     e= e.replace( stat_beg, rep_stat )
                     e= e.replace( stat_end, '' )
                 if all( [ ctrl_beg  in e, ctrl_end in e  ] ) :
                     e= e.replace( ctrl_beg, rep_ctrl )
                     e= e.replace( ctrl_end, '' )
                 o_lines.append(e)
            return o_lines 

        if Z.URL_optimize == True:
            FileOper.list2file( optimizer( lines), html_fnm + Z.myview_ext)
        else:
            FileOper.list2file( lines, html_fnm + Z.myview_ext)
        return

    def run_list(Z):


        [Z.run(fnm, dbg=False) for fnm in glob.glob("*.html")]
        pprint.pprint(Z.pat_cnt, )  # width =1)
        prYellow("replaced: %s" % sum([int(v) for v in Z.pat_cnt.values()]))
        print ("uniq_key_value: %s" % next(int_uniq_key))
# ---------------------------------------------------------------------------------------------


def replace_in_list(l1, pat_dict, *add_lists):
    s = "\n".join(l1)
    for k, v in pat_dict.items():
        s = s.replace(k, v)
    ret_list = s.split('\n')
    if add_lists is not None:
        for arg in add_lists:
            ret_list.extend(arg)
    return ret_list


def repl2_in_lists(pat_dict, *ll):
    res_list = []
    if ll is not None:
        for l in ll:
            s = "\n".join(l)
            for k, v in pat_dict.items():
                s = s.replace(k, v)
            tmp_list = s.split('\n')

            res_list.extend(tmp_list)
    return res_list
# ---------------------------------------------------------------------------------------------


class W2pApp(StrDb):
    def __init__(Z,):
        Z.app_tables = []
        Z.app_controllers = []
        Z.app_views = []

    def create_new_tmp_files(Z):
        shutil.copy2(Z.ctrl_file + Z.sv_ext, Z.ctrl_tmp)

    def build_db(Z, ctrl_nm, db_nm, db_data):
        pat_dict = {'CONTROLLER': ctrl_nm, 'DBTBL': db_nm}

        if len(db_data) == 0:
            dbfull = repl2_in_lists(
                pat_dict,
                Z.model_define,
                Z.model_popula,
                Z.model_commit)
        else:
            dbfull = replace_in_list(
                Z.model_define, pat_dict, db_data, Z.model_commit)

        fpath = os.path.join(Z.db_path, Z.dbf_prefix + db_nm + '.py')
        FileOper.list2file(dbfull, fpath)
        return fpath

    def get_func_list(Z, fnm):
        with open(fnm)as f:
            code = f.read()
        tree = ast.parse(code)
        return [
            x.name for x in ast.walk(tree) if isinstance(
                x, ast.FunctionDef)]

    def init_template_admin(Z, admin_nm):
        #FileOper.list2file(Z.main_menu, Z.menu_main_path)
        menu_pat = {
            "#response.menu": "response.menu "} if len(
            Z.db_src_myimg) else {}
        FileOper.pat_list2file(
            Z.main_menu,
            menu_pat,
            Z.menu_main_path,
            mode='w')
        print ("template admin_nm: ", admin_nm)
        admin_views_path = os.path.join(Z.views_path, admin_nm)
        if not os.path.exists(admin_views_path):
            os.mkdir(admin_views_path)
        ctrl_fnm = Z.ctrl_path + admin_nm + '.py'
        FileOper.list2file(Z.ctrl_mygrid, ctrl_fnm)
        FileOper.list2file(Z.ctrl_search, ctrl_fnm, 'a')
        FileOper.list2file(Z.api_str, ctrl_fnm, 'a')
        fnm = os.path.join(admin_views_path, 'index.html')

        FileOper.list2file(Z.menu4mygrid, fnm)
        FileOper.pat_list2file(Z.ctrl_dumb,
                               {"key='value'": "form=search_site()",
                                'FCTRL': 'index',
                                'DIR': admin_nm,
                                'VIEW': 'index.html'},
                               ctrl_fnm,
                               mode='a')
        #print (fnm)
        #print (Z.ctrl_dumb)
        # sys.exit('stop')

    def build_admin_controller_views(
            Z,
