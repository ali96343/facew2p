def find_file(name, path):
               for root, dirs, files in os.walk(path):
                    if name in files:
                       return os.path.join(root, name)
               return None

def check_in_cur_dir( fnm ):
    fnm= fnm.replace("../","")
    pat_fnm = fnm.split('/')
    if len(pat_fnm[0]) == 0 and len(pat_fnm)>1:
         pat_fnm= pat_fnm[1:]
    fnm1= pat_fnm[-1]
    if os.path.isfile(fnm1):
         return fnm1
    x_nm=""
    for i in range(len(pat_fnm)-1, -1, -1):
         x_nm = "/".join(pat_fnm[i:])
         if os.path.isfile(x_nm):
               shutil.copy(x_nm, './')
               return fnm1

    miss_file= find_file( fnm1, './')
    if miss_file:
         shutil.copy(miss_file, './')
         return fnm1 

    shutil.copyfile('index.html', fnm1 )
    prRed("not found: %s, replaced with index.html" % fnm1)
    return fnm1

def check_all_htmls( htmls_list ):

     for e in htmls_list:

         try:
             with open(e,) as f:
                html = f.read().decode('utf-8')
                soup = bs.BeautifulSoup(html, "lxml")
         except:
             sys.exit("except read file: %s" %  e )
              
        
         for link in soup.find_all(None, href=True):
               href= (link['href'])
               if href is None:
                     continue 
               if href.endswith('.html') or href.endswith('.htmls'):
                     found_file=  check_in_cur_dir (  href )
                     if found_file.endswith('.htmls'):
                           found_file= check_in_cur_dir (  found_file.split('.')[-2] + '.html' )
                     found_file in htmls_list or htmls_list.append( found_file )               

