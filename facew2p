        def is_it_image(ma2):
            ma2end= ma2.split('.')[-1].lower()
            ima_end= ['png', 'jpg' , 'jpeg', 'gif', 'svg', 'bmp']
            return ma2end in ima_end


        def check_add_img(ma2):
            ma2end= ma2.split('.')[-1].lower()
            ima_end= ['png', 'jpg' , 'jpeg', 'gif', 'svg']
            #if any([ma2.endswith(".png"), ma2.endswith(".jpg"), ma2.endswith(
            #        ".jpeg"), ma2.endswith(".gif"), ma2.endswith(".svg")]):
            if is_it_image(ma2):
            #if ma2end in ima_end:

                pat_l = ma2.split('/')
                x_nm = ""
                for i in range(len(pat_l) -1, -1, -1):
                    x_nm = "/".join(pat_l[i:])
                    #print ( "xxx:", x_nm )
                    if os.path.isfile(x_nm):
                        break
                if not os.path.exists(x_nm):
                    return ""
                if x_nm not in Z.db_src_myimg:
                    Z.db_src_myimg.append(x_nm)
                if x_nm not in Z.db_src_myimg_ctrl:
                    Z.db_src_myimg_ctrl[ma2] = Z.get_from_db_fnm2ctrl(Z.f0)
                return x_nm
            return None

        def r_data(Z, ma, p2, num_str):               # data-*= "ccccccc/bbbb"
            magrp2 = ma.group(2)
            if ( len( glob.glob(magrp2 + '.*')) == 0 ) and (os.path.isfile(magrp2)== False) and (os.path.isdir(magrp2) == False):
                 print ("+++++++++++", magrp2)
                 new_pat= "\g<1>\g<2>\g<3>"
                 return (new_pat, "")

            if is_it_image(magrp2) == True:
                   if  not check_add_img (magrp2) is None:
                       new_pat = p2 % (url_beg, url_end)
                       return (new_pat, "")
                   else:
                       print ("data-* image not found? put data:image ?")

            new_pat = p2 % (url_beg, url_end)
            return (new_pat, "")

