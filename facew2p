                           prRed("alarm! web2py user.html was rewritten by a html-script-view !!!")
                    
                    shutil.copy2(fnm, dst_view)

                    #FileOper.func_off_in_file('../../controllers/default.py', ctrl_nm ,add_sym= 'F' )
                    Z.table2myadd(form_db)

            ctrlsum += [ctrl_new_end + ')']
