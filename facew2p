        def check_add_css(fnm):
            if fnm.endswith( ('.css', '.less') ):
                pat_l = fnm.split('/')
                x_nm=""
                for i in range(len(pat_l) -1, -1, -1):
                     x_nm = "/".join(pat_l[i:])
                     if os.path.isfile(x_nm):
                         #print ("-------------------------found: ", x_nm)
                         break

                if len(x_nm) and os.path.exists(x_nm):
                    if x_nm not in Z.db_css_files:
                        Z.db_css_files.append(x_nm)
                else:
                    if x_nm not in Z.db_css_missed_files:
                        Z.db_css_missed_files.append(x_nm)
                #print (magrp2)

